    </update>

    <update id="addInventory">
        update inventory
        set qty=qty + #{quantity}
        where id = #{id}
    </update>

    <update id="minusInventory">
        update inventory
        set qty=qty - #{quantity}
        where id = #{id}
          and qty >= #{quantity}
    </update>
