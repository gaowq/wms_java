                #{location,jdbcType=VARCHAR}, #{minQty,jdbcType=INTEGER},
                #{createTime,jdbcType=TIMESTAMP}, #{createId,jdbcType=INTEGER}, #{updateTime,jdbcType=TIMESTAMP},
                #{updateId,jdbcType=INTEGER})
    </insert>
