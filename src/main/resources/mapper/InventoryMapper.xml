    <update id="updateByPrimaryKeySelective" parameterType="com.example.wms_java.model.Inventory">
        update inventory
        <set>
            <if test="name != null">
                `name` = #{name,jdbcType=VARCHAR},
            </if>
            <if test="spec != null">
                spec = #{spec,jdbcType=VARCHAR},
            </if>
            <if test="qty != null">
